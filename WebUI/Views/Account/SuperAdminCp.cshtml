@model List<Domain.Platform.Deelplatform>
@{
    Layout = null;
}

@Html.Partial("~/Views/Shared/Dashboard/_DashboardHead.cshtml")

<body class="fix-header card-no-border fix-sidebar mini-sidebar">
    <div id="main-wrapper">
        @Html.Partial("~/Views/Shared/Dashboard/_DashboardHeader.cshtml")
        @Html.Partial("~/Views/Shared/Dashboard/_SuperAdminCpLeftBar.cshtml")
        <div class="page-wrapper">
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-5 align-self-center">
                        <h3 class="text-themecolor">SuperAdmin Control Panel</h3>
                    </div>
                    <div class="col-md-7 align-self-center">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                        </ol>
                    </div>
                    <div>
                        <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- Dit gedeelte eronder moogde aanpassen -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-5 align-self-center">
                        <h4 class="text-themecolor">Deelplatformen</h4>
                    </div>
                </div>
                <div class="row">
                    @foreach (var p in Model)
                    {
                        <!-- column -->
                        <div class="col-lg-3 col-md-6">
                            <!-- Card -->
                            <div class="card">
                                <img class="card-img-top img-responsive" src="~/Content/Dashboard/assets/images/platform-image.png" alt="Card image cap">
                                <div class="card-body">
                                    <h4 class="card-title">@p.Naam</h4>
                                    <p class="card-text">@p.Tagline</p>
                                    <a href="/platform/editplatform?id=@p.DeelplatformId" class="btn btn-primary">Beheer</a>
                                </div>
                            </div>
                            <!-- Card -->
                        </div>
                        <!-- column -->
                    }
                </div>
                <div class="row">
                    <div class="col-md-5 align-self-center">
                        <h4 class="text-themecolor">Deelplatformen aanmaken</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Nieuw platform?</h4>
                                <p class="card-text">Maak er snel eentje aan.</p>
                                <a href="/platform/CreatePlatform" class="btn btn-primary">Platform aanmaken</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End Page Content -->
                <!-- ============================================================== -->
            </div>
            @Html.Partial("~/Views/Shared/Dashboard/_DashboardFooter.cshtml")
        </div>
        @Html.Partial("~/Views/Shared/Dashboard/_DashboardScripts.cshtml")
    </div>
</body>








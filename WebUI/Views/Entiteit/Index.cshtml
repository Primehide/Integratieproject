@model IEnumerable<Domain.Entiteit.Persoon>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

    @foreach (var item in Model)
    {
        <th>
            <td>
                @Html.DisplayFor(i => item.EntiteitId)
            </td>
            <td>
                @Html.DisplayFor(i => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(i => item.LastName)
            </td>
        </th>
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EntiteitId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                    <td>@Html.ActionLink("Display", "DisplayPerson", new { PersonId = item.EntiteitId })</td>
                    <td>@Html.ActionLink("Update", "UpdatePerson", new { PersonId = item.EntiteitId })</td>
                    <td>@Html.ActionLink("Delete", "DeletePerson", new { PersonId = item.EntiteitId })</td>

        </tr>
    }

<tr>
    <td>@Html.ActionLink("Maak nieuw Persoon", "AddPerson", "Entiteit")</td>
   
</tr>

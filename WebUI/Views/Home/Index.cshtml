@model Domain.Platform.Deelplatform
@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>

    <!-- Basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewBag.dpnaam - Home</title>

    <meta name="keywords" content="HTML5 Template" />
    <meta name="description" content="Porto - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="img/apple-touch-icon.png">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800%7CShadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/font-awesome/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/animate/animate.min.css">
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/simple-line-icons/css/simple-line-icons.min.css">
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/owl.carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/owl.carousel/assets/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/magnific-popup/magnific-popup.min.css">

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Content/Homepagina/css/theme.css">
    <link rel="stylesheet" href="~/Content/Homepagina/css/theme-elements.css">
    <link rel="stylesheet" href="~/Content/Homepagina/css/theme-blog.css">
    <link rel="stylesheet" href="~/Content/Homepagina/css/theme-shop.css">

    <!-- Current Page CSS -->
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/rs-plugin/css/settings.css">
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/rs-plugin/css/layers.css">
    <link rel="stylesheet" href="~/Content/Homepagina/vendor/rs-plugin/css/navigation.css">

    <!-- Demo CSS -->
    <!-- Skin CSS -->
    <link rel="stylesheet" href="skin-corporate-7.css">

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Content/Homepagina/css/custom.css">

    <!-- Head Libs -->
    <script src="~/Content/Homepagina/vendor/modernizr/modernizr.min.js"></script>

</head>
<body>
    <div class="body">
        <header id="header" class="header-narrow header-semi-transparent header-transparent-sticky-deactive header-transparent-bottom-border" data-plugin-options="{'stickyEnabled': true, 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': true, 'stickyStartAt': 1, 'stickySetTop': '1'}">
            <div class="header-body">
                <div class="header-container container">
                    <div class="header-row">
                        <div class="header-column">
                            <div class="header-row">
                                <div class="header-logo">
                                    <a href="index.html">
                                        @if (Model.Logo != null)
                                        {
                                            <img alt=@ViewBag.dpnaam width="150" height="50" src="data:image;base64,@System.Convert.ToBase64String(Model.Logo)">
                                        }
                                        else
                                        {
                                            <img alt=@ViewBag.dpnaam width="150" height="50" src="">
                                        }
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="header-column justify-content-end">
                            <div class="header-row">
                                <div class="header-nav header-nav-dark-dropdown">
                                    <div class="header-nav-main header-nav-main-square header-nav-main-effect-2 header-nav-main-sub-effect-1">
                                        <nav class="collapse">
                                            <ul class="nav nav-pills" id="mainNav">
                                                <li class="">
                                                    <a class="nav-link" href="/Account/Register">
                                                        Registreren
                                                    </a>
                                                </li>
                                                <li class="">
                                                    <a class="nav-link" href="/Account/Login">
                                                        Login
                                                    </a>
                                                </li>
                                            </ul>
                                        </nav>
                                    </div>
                                    <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main nav">
                                        <i class="fas fa-bars"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div role="main" class="main">
            <div class="slider-container rev_slider_wrapper" style="height: 760px;">
                <div id="revolutionSlider" class="slider rev_slider" data-version="5.4.7" data-plugin-revolution-slider data-plugin-options="{'delay': 9000, 'gridwidth': 800, 'gridheight': 760, 'responsiveLevels': [4096,1200,992,500]}">
                    <ul>
                        <li data-transition="fade">
                            <img src="~/Content/Homepagina/img/slides/view.jpg"
                                 alt=""
                                 data-bgposition="center center"
                                 data-bgfit="cover"
                                 data-bgrepeat="no-repeat"
                                 class="rev-slidebg">

                            <div class="tp-caption"
                                 data-x="center" data-hoffset="-220"
                                 data-y="center" data-voffset="-95"
                                 data-start="1000"
                                 style="z-index: 5"
                                 data-transform_in="x:[-300%];opacity:0;s:500;"><img src="~/Content/Homepagina/img/slides/view.jpg" alt=""></div>

                            <div class="tp-caption top-label"
                                 data-x="center" data-hoffset="0"
                                 data-y="center" data-voffset="-95"
                                 data-start="500"
                                 style="z-index: 5"
                                 data-transform_in="y:[-300%];opacity:0;s:500;">@ViewBag.tagline</div>

                                <div class="tp-caption"
                                     data-x="center" data-hoffset="220"
                                     data-y="center" data-voffset="-95"
                                     data-start="1000"
                                     style="z-index: 5"
                                     data-transform_in="x:[300%];opacity:0;s:500;"><img src="~/Content/Homepagina/img/slides/view.jpg" alt=""></div>

                                <div class="tp-caption main-label"
                                     data-x="center" data-hoffset="0"
                                     data-y="center" data-voffset="-45"
                                     data-start="1500"
                                     data-whitespace="nowrap"
                                     data-transform_in="y:[100%];s:500;"
                                     data-transform_out="opacity:0;s:500;"
                                     style="z-index: 5"
                                     data-mask_in="x:0px;y:0px;">@ViewBag.dpnaam</div>

                                    <div class="tp-caption bottom-label"
                                         data-x="center" data-hoffset="0"
                                         data-y="center" data-voffset="5"
                                         data-start="2000"
                                         data-fontsize="['20','20','20','30']"
                                         style="z-index: 5"
                                         data-transform_in="y:[100%];opacity:0;s:500;"></div>

                                    <a class="tp-caption btn btn-lg btn-primary btn-slider-action"
                                       data-hash
                                       data-hash-offset="85"
                                       href="#home-intro"
                                       data-x="center" data-hoffset="0"
                                       data-y="center" data-voffset="80"
                                       data-start="2200"
                                       data-whitespace="nowrap"
                                       data-fontsize="['22','22','22','32']"
                                       data-transform_in="y:[100%];s:500;"
                                       data-transform_out="opacity:0;s:500;"
                                       style="z-index: 5"
                                       data-mask_in="x:0px;y:0px;">Ontdek nu!</a>

                                </li>

                            </ul>
                        </div>
                    </div>
                    <img src="~/Content/Homepagina/img/icons/down-arrow.png" alt="down-arrow" class="center">
                    <div id="home-intro" class="container">
                        <div class="section group">
                            <div class=" row" style="margin-bottom: 100px;">
                                <div class="col-md-4">
                                    Personen meest positief/negatief
                                    <canvas id="myChart"></canvas>
                                </div>
                                <div class="col-md-4">
                                    Trending personen<br />
                                    (aantal vermeldingen laatste 24 uur)
                                    <canvas id="myChart2"></canvas>
                                </div>
                                <div class="col-md-4">
                                    Organisaties meest positief/negatief
                                    <canvas id="myChart3"></canvas>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    Trending Organisaties<br />
                                    (aantal vermeldingen laatste 24 uur)
                                    <canvas id="myChart4"></canvas>
                                </div>
                                <div class="col-md-4">
                                    Themas meest positief/negatief
                                    <canvas id="myChart5"></canvas>
                                </div>
                                <div class="col-md-4">
                                    Trending Themas<br />
                                    (aantal vermeldingen laatste 24 uur)
                                    <canvas id="myChart6"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <section class="section section-tertiary text-center text-lg-left pb-0 pb-lg-5 pb-xl-0 mb-0">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-7">
                                    <h2 class="text-title">Maak een <strong>Account</strong> aan.	</h2>
                                    <p class="text-normal">Door een account aan te maken kan je meerdere grafieken bekijken, personaliseren & delen. Krijg een beter inzicht over wat er online leeft bij politici en verwante thema's. </p>
                                    <a href="/Account/Register" class="btn btn-secondary mt-4 mb-5 mb-lg-2">Registreren</a>
                                </div>
                                <div class="col-lg-4 ml-auto my-auto">
                                    <img class="img-fluid appear-animation" src="~/Content/Homepagina/img/gallery/logo-black.png" alt="" data-appear-animation="fadeInUp">
                                </div>
                            </div>
                        </div>
                    </section>
                    <footer id="footer" style="margin-top:0;">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="contact-details">
                                        <h4>Contact Us</h4>
                                        <ul class="contact">
                                            <li><p><i class="fas fa-map-marker-alt"></i> <strong>Address:</strong> Nationalestraat 5, 2000 Antwerpen</p></li>
                                            <li><p><i class="fas fa-phone"></i> <strong>Phone:</strong> 03 613 16 00</p></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="footer-copyright">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-1">
                                        <a href="index.html" class="logo">

                                        </a>
                                    </div>
                                    <div class="col-lg-7">
                                        <p>© Copyright 2018. All Rights Reserved.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </footer>
                </div>

                <!-- Vendor -->
                <script src="~/Content/Homepagina/vendor/jquery/jquery.min.js"></script>
                <script src="~/Content/Homepagina/vendor/jquery.appear/jquery.appear.min.js"></script>
                <script src="~/Content/Homepagina/vendor/jquery.easing/jquery.easing.min.js"></script>
                <script src="~/Content/Homepagina/vendor/jquery-cookie/jquery-cookie.min.js"></script>
                <script src="~/Content/Homepagina/vendor/popper/umd/popper.min.js"></script>
                <script src="~/Content/Homepagina/vendor/bootstrap/js/bootstrap.min.js"></script>
                <script src="~/Content/Homepagina/vendor/common/common.min.js"></script>
                <script src="~/Content/Homepagina/vendor/jquery.validation/jquery.validation.min.js"></script>
                <script src="~/Content/Homepagina/vendor/jquery.easy-pie-chart/jquery.easy-pie-chart.min.js"></script>
                <script src="~/Content/Homepagina/vendor/jquery.gmap/jquery.gmap.min.js"></script>
                <script src="~/Content/Homepagina/vendor/jquery.lazyload/jquery.lazyload.min.js"></script>
                <script src="~/Content/Homepagina/vendor/isotope/jquery.isotope.min.js"></script>
                <script src="~/Content/Homepagina/vendor/owl.carousel/owl.carousel.min.js"></script>
                <script src="~/Content/Homepagina/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
                <script src="~/Content/Homepagina/vendor/vide/vide.min.js"></script>

                <!-- Theme Base, Components and Settings -->
                <script src="~/Content/Homepagina/js/theme.js"></script>

                <!-- Current Page Vendor and Views -->
                <script src="~/Content/Homepagina/vendor/rs-plugin/js/jquery.themepunch.tools.min.js"></script>
                <script src="~/Content/Homepagina/vendor/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>

                <!-- Theme Custom -->
                <script src="~/Content/Homepagina/js/custom.js"></script>

                <!-- Theme Initialization Files -->
                <script src="~/Content/Homepagina/js/theme.init.js"></script>


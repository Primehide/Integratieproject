                <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.js"></script>
                <script>
                    var ctx = document.getElementById("myChart").getContext('2d');
                    var myChart = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: ["Bart De Wever", "Kris Peeters", "Ben Weyts"],
                            datasets: [{
                                data: [0.5, 0.7, -0.2],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(255, 206, 86, 0.2)',
                                ],
                                label: [
                                    'Maggie De Block',
                                    'Theo Francken',
                                ],
                                borderColor: [
                                    'rgba(255,99,132,1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 206, 86, 1)',
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            }
                        }
                    });


                    var ctx2 = document.getElementById("myChart2").getContext('2d');
                    var myChart = new Chart(ctx2, {
                        type: 'doughnut',
                        data: {
                            datasets: [{
                                data: [10, 20],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                ],
                            }],
                            labels: [
                                'Maggie De Block',
                                'Theo Francken',
                            ]
                        },
                    });

                    var ctx3 = document.getElementById("myChart3").getContext('2d');
                    var myChart = new Chart(ctx3, {
                        type: 'bar',
                        data: {
                            labels: ["N-VA", "Vlaams belang", "CD&V"],
                            datasets: [{
                                label: 'Sentiment',
                                data: [0.9, -0.7, -0.6],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(255, 206, 86, 0.2)',
                                ],
                                borderColor: [
                                    'rgba(255,99,132,1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 206, 86, 1)',
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            }
                        }
                    });

                    var ctx4 = document.getElementById("myChart4").getContext('2d');
                    var myChart = new Chart(ctx4, {
                        type: 'doughnut',
                        data: {
                            datasets: [{
                                data: [12, 19],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                ],
                            }],
                            labels: [
                                'Groen',
                                'Open-VLD',
                            ]
                        },
                    });

                    var ctx5 = document.getElementById("myChart5").getContext('2d');
                    var myChart = new Chart(ctx5, {
                        type: 'bar',
                        data: {
                            labels: ["Mobiliteit", "Immigratie", "Terrorisme"],
                            datasets: [{
                                label: 'Sentiment',
                                data: [-0.8, -0.7, -0.2],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(255, 206, 86, 0.2)',
                                ],
                                borderColor: [
                                    'rgba(255,99,132,1)',
                                    'rgba(54, 162, 235, 1)',
                                    'rgba(255, 206, 86, 1)',
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            }
                        }
                    });

                    var ctx6 = document.getElementById("myChart6").getContext('2d');
                    var myChart = new Chart(ctx6, {
                        type: 'doughnut',
                        data: {
                            datasets: [{
                                data: [25, 15],
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                ],
                            }],
                            labels: [
                                'Onderwijs',
                                'sociale zekerheid',
                            ]
                        },
                    });
                </script>
        </body>
    </html>

